<?xml version="1.0" encoding="utf-8" ?>
<android.support.v7.widget.CardView 
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:card_view="http://schemas.android.com/apk/res-auto"
	android:id="@+id/card_view"
	android:clickable="true" 
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:layout_marginLeft="10dp" 
	android:layout_marginRight="10dp"
	android:foreground="?android:selectableItemBackground" 
	card_view:cardCornerRadius="2dp" 
	card_view:cardElevation="3dp" 
	card_view:cardUseCompatPadding="true">
	
	<RelativeLayout 
		android:paddingLeft="16dp"
		android:paddingTop="8dp"
		android:paddingRight="16dp" 
		android:paddingBottom="16dp"
		android:layout_width="fill_parent" 
		android:layout_height="fill_parent">
		
		<RelativeLayout
			android:id="@+id/rlMapel"
			android:layout_width="fill_parent" 
			android:layout_height="wrap_content">
			
			<TextView
				android:textAppearance="?android:textAppearanceLarge"
				android:textColor="@color/primary_text" 
				android:id="@+id/tvMapel"
				android:layout_width="fill_parent" 
				android:layout_height="wrap_content" />
			
		</RelativeLayout>
		
		<View
			android:id="@+id/divider"
			android:background="@color/divider"
			android:layout_width="fill_parent" 
			android:layout_height="1dp" 
			android:layout_marginTop="8dp" 
			android:layout_marginBottom="8dp" 
			android:layout_below="@id/rlMapel" />
		
		<RelativeLayout 
			android:id="@+id/rlJam"
			android:layout_width="fill_parent" 
			android:layout_height="wrap_content" 
			android:layout_below="@id/divider">
			
			<TextView
				android:textAppearance="?android:textAppearanceMedium"
				android:textColor="@color/secondary_text" 
				android:id="@+id/tvJam" 
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:layout_below="@id/tvMapel" />
			
		</RelativeLayout>
		
		<RelativeLayout 
			android:id="@+id/rlGuru"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:layout_below="@id/rlJam">
			
			<TextView 
				android:textAppearance="?android:textAppearanceMedium"
				android:textColor="@color/primary_text"
				android:id="@+id/tvGuruHelper" 
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="Guru: " />
			
			<TextView
				android:textAppearance="?android:textAppearanceMedium" 
				android:textColor="@color/secondary_text" 
				android:id="@+id/tvGuru" 
				android:layout_width="fill_parent"
				android:layout_height="wrap_content" 
				android:layout_toRightOf="@id/tvGuruHelper" />
			
		</RelativeLayout>
		
		<RelativeLayout 
			android:id="@+id/rlRuangan" 
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:layout_below="@id/rlGuru">
			
			<TextView
				android:textAppearance="?android:textAppearanceMedium" 
				android:textColor="@color/primary_text" 
				android:id="@+id/tvRuanganHelper" 
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="Ruangan: " />
			
			<TextView
				android:textAppearance="?android:textAppearanceMedium"
				android:textColor="@color/secondary_text" 
				android:id="@+id/tvRuangan"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content" 
				android:layout_toRightOf="@id/tvRuanganHelper" />
			
		</RelativeLayout>
		
		<RelativeLayout 
			android:id="@+id/rlSeragam" 
			android:layout_width="fill_parent" 
			android:layout_height="wrap_content" 
			android:layout_below="@id/rlRuangan">
			
			<TextView
				android:textAppearance="?android:textAppearanceMedium" 
				android:textColor="@color/primary_text"
				android:id="@+id/tvSeragamHelper" 
				android:layout_width="wrap_content" 
				android:layout_height="wrap_content"
				android:text="Seragam: " />
			
			<TextView
				android:textAppearance="?android:textAppearanceMedium"
				android:textColor="@color/secondary_text"
				android:id="@+id/tvSeragam" 
				android:layout_width="fill_parent"
				android:layout_height="wrap_content" 
				android:layout_toRightOf="@id/tvSeragamHelper" />
			
		</RelativeLayout>
		
	</RelativeLayout>
	
</android.support.v7.widget.CardView>

